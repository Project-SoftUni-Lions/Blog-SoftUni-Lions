@model IEnumerable<MVCBog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Body)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CommentsCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <td>
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @MVCBog.Classes.Utils.CutText(item.Body)
        </td>
        <td>
            @if (item.Author == null)
            {
                <i>No Author</i>
            }
            @Html.DisplayFor(modelItem => item.Author.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CommentsCount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>

        <td>
            @if (User.IsInRole("Administrators"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) @:|
            }
            @Html.ActionLink("Details", "Details", new {id = item.Id})
            @if (User.IsInRole("Administrators"))
            {
                @:| @Html.ActionLink("Delete", "Delete", new {id = item.Id})
            }
        </td>
    </tr>
}

</table>
