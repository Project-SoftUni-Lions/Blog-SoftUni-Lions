<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Cars</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Cars SoftUni", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Начало", "Index", "Home")</li>*@
                    <li>@Html.ActionLink("Обяви", "Index", "Ads")</li>
                    <li>@Html.ActionLink("Публикувай нова обява", "Create", "Ads")</li>
                    <li>@Html.ActionLink("Търсене", "Search", "Ads")</li>
                    <li>@Html.ActionLink("Анкета", "index", "Poll")</li>
                    <li>@Html.ActionLink("За нас", "index", "Aboutus")</li>
                    <li>@Html.ActionLink("Контакти", "Contacts", "Aboutus")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
<div class="container body-content">
    @Html.Partial("_Notifications")
    @RenderBody()
    <hr/>
    <div>Брой уникални потребители на сайта</div>
    <!-- hitwebcounter Code START -->
    <a href="http://www.hitwebcounter.com" target="_blank">
        <img src="http://hitwebcounter.com/counter/counter.php?page=6479486&style=0025&nbdigits=5&type=ip&initCount=0" title="" Alt="" border="0">
    </a>                                        <br />
    <!-- hitwebcounter.com --><a href="http://www.hitwebcounter.com" title="Free Visits Counter"
                                 target="_blank" style="font-family: Geneva, Arial, Helvetica;
                                        font-size: 10px; color: #B3B7B3; text-decoration: underline ;">
   
    </a>   
    
    <footer>
        <p>&copy; @DateTime.Now.Year - Cars SoftUni</p>
    </footer>
</div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
