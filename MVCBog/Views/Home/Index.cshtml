@{ViewBag.Title = "Home";}
@model  List<MVCBog.Models.Ads>
<div class="jumbotron">
    <h1>Cars SoftUni</h1>
    <p class="lead">Cars SoftUni e компания, лидер на пазара на продажба на автомобили в България и Източна Европа.</p>
    <p><a href="/Aboutus/Contacts" class="btn btn-primary btn-lg">Направи запитване &raquo;</a>
    </p>
</div>
<div><b>Последни обяви в сайта</b></div>
@foreach (var ads in Model)
 {
    <section class="row">
        <article class="post col-md-12">
            <h2><a href="/Ads/Details/@ads.Id">@MVCBog.Classes.Utils.CutText(ads.Title, 30)</a></h2>
            <div>
                <i>Обявата е публикувана на: @ads.Date</i>
                @if (ads.Author != null)
                {
                    @:от <i>@ads.Author.FullName (@ads.Author.UserName)</i>
                    <p>@Html.Raw(@MVCBog.Classes.Utils.CutText(ads.Body))</p>
                }
            </div>
        </article>
    </section>
}

